# Server
PORT=3000

# Logging
LOG_LEVEL=info       # debug | info | warn | error

# Timeouts (in seconds)
READ_TIMEOUT=5
WRITE_TIMEOUT=10
IDLE_TIMEOUT=120

# Authentication (for /auth/token)
AUTH_USERNAME=user
AUTH_PASSWORD=pass

# JWT settings
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY_HOURS=1
JWT_ISSUER=flight-service